@model Producer
@{
    string strTitle = "Редактировать производителя";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="Producer" asp-action="ProducerEdit" method="post" enctype="multipart/form-data">
            @Html.HiddenFor(producer => producer.ProducerId, @Model?.ProducerId)

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Name"></label>
                @Html.EditorFor(producer => producer.Name)
            </div>
            <div class="div-box">
                <label asp-for="ContactInformation"></label>
                @Html.EditorFor(producer => producer.ContactInformation)
            </div>
            <div class="div-box">
                <label asp-for="Location"></label>
                @Html.EditorFor(producer => producer.Location)
            </div>
            <div class="div-box">
                <label asp-for="Description"></label>
                @Html.EditorFor(producer => producer.Description)
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>

