@model Product
@{
    string strTitle = "Редактировать продукт";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="Product" asp-action="ProductEdit" method="post" enctype="multipart/form-data">
            @Html.HiddenFor(product => product.ProductId, @Model?.ProductId)

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="ProducerId"></label>
                @Html.EditorFor(product => product.ProducerId)
            </div>
            <div class="div-box">
                <label asp-for="Name"></label>
                @Html.EditorFor(product => product.Name)
            </div>
            <div class="div-box">
                <label asp-for="Description"></label>
                @Html.EditorFor(product => product.Description)
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>

